<!DOCTYPE html>
<html>

<head>
    <title>Category List</title>
    <%- include('bootstrap') -%>
</head>

<body>
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                <h1>
                    <center>Category List</center>
                </h1>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <center>
                    <h1>
                        <a href="/admin/managecategory" class="btn btn-secondary">
                            <i class="fa fa-plus p-2" aria-hidden="true"></i>Create New
                        </a>
                    </h1>
                </center>
            </div>
        </div>
    </div>
    <div class="text-danger">
        <% if(messages.err){ %>
            <p>
                <%= messages.err %>
            </p>
            <%}%>
    </div>
    <div class="container-fluid mt-5">

        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <h5
                    style="border-bottom: 1px solid black;padding-bottom: 3px;border-top: 1px solid black;padding-top: 3px">
                    Name
                </h5>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
        </div>

    </div>
    <div class="container-fluid mt-2">
        <% list.forEach(li=>{ %>
            <div class="row mt-2">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                    <%= li.category_name %>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <a href="/admin/managecategory/<%= li._id %>"><i class="fa fa-pencil fa-lg"
                            aria-hidden="true"></i></a>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <a href="/admin/managecategory/delete/<%= li._id %>"
                        onclick="return confirm('Are you sure you want to delete this record?');"><i
                            class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </div>
            </div>
            <% })%>
    </div>

</body>

</html>