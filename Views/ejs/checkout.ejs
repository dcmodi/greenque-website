<!DOCTYPE html>
<html>

<head>
    <title>Checkout</title>
    <%- include('bootstrap') -%>
</head>

<body>

    <%- include('header'); -%>

    <!-- CHECK OUT-->
    <div class="container" id="check-out">
        <main>
            <div class="py-5 text-center">
              <h2>Checkout form</h2>
              <center><div class="divider"></div></center>
            </div>
        
            <div class="row g-3">
              <div class="col-md-5 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                  <span class="text-muted">Your cart</span>
                  <span class="badge bg-secondary rounded-pill"><%= cart.items.length %></span>
                </h4>
                <ul class="list-group mb-3">
                  <% for(var i=0;i < cart.items.length; i++){ %>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                      <div>
                        <h6 class="my-0"><%= cart.items[i].name %></h6>
                        <small class="text-muted"></small>
                      </div>
                      <span class="text-muted">&#x20b9; <%= cart.items[i].qty * cart.items[i].price %></span>
                    </li>
                  <% } %>
                  <!--<li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                      <h6 class="my-0">Promo code</h6>
                      <small>EXAMPLECODE</small>
                    </div>
                    <span class="text-success">âˆ’&#x20b9; 10</span>
                  </li>-->
                  <li class="list-group-item d-flex justify-content-between">
                    <span>Total (Rs.)</span>
                    <strong>&#x20b9; <%= cart.totalPrice %></strong>
                  </li>
                </ul>
        
                <!--<form class="card p-2">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Promo code">
                    <button type="submit" class="btn btn-secondary">Redeem</button>
                  </div>
                </form>-->
              </div>
              <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Shipping address</h4>
                <% if(messages.err){ %>
                    <div class="row mt-3">
                        <div class="col-12">
                               <p class="text-danger"><%= messages.err %></p>
                        </div>
                    </div>
                <% } %>
                <form class="needs-validation" action="/checkout" method="POST" novalidate>
                  <div class="row g-3">
                    <div class="col-sm-6">
                      <label for="firstName" class="form-label">First name</label>
                      <input type="text" class="form-control" id="firstName" name="fname" placeholder="" value="" required>
                      <div class="invalid-feedback">
                        Valid first name is required.
                      </div>
                    </div>
        
                    <div class="col-sm-6">
                      <label for="lastName" class="form-label">Last name</label>
                      <input type="text" class="form-control" id="lastName" name="lname" placeholder="" value="" required>
                      <div class="invalid-feedback">
                        Valid last name is required.
                      </div>
                    </div>
        
        
                    <div class="col-12">
                      <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com">
                      <% if(messages.email){ %>
                        <div class="row mt-3">
                            <div class="col-12">
                                   <p class="text-danger"><%= messages.email %></p>
                            </div>
                        </div>
                    <% } %>
                    </div>
                    <div class="col-12">
                        <label for="mob" class="form-label">Mobile <span class="text-muted">(Optional)</span></label>
                        <input type="email" class="form-control" id="mob" name="mob" placeholder="">
                        <% if(messages.mob){ %>
                          <div class="row mt-3">
                              <div class="col-12">
                                     <p class="text-danger"><%= messages.mob %></p>
                              </div>
                          </div>
                      <% } %>
                      </div>
        
                    <div class="col-12">
                      <label for="address" class="form-label">Address</label>
                      <input type="text" class="form-control" id="address" name="address1" placeholder="1234 Main St" required>
                      <div class="invalid-feedback">
                        Please enter your shipping address.
                      </div>
                    </div>
        
                    <div class="col-12">
                      <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
                      <input type="text" class="form-control" id="address2" name="address2" placeholder="Apartment or suite">
                    </div>
        
        
                    <div class="col-md-3">
                      <label for="zip" class="form-label">Zip</label>
                      <input type="text" class="form-control" id="zip" placeholder="" name="zip" required>
                      <div class="invalid-feedback">
                        Zip code required.
                      </div>
                    </div>
                  </div>
        
                  <hr class="my-4">
        
                  <h4 class="mb-3">Payment</h4>
        
                  <div class="my-3">
                    <div class="form-check">
                      <input id="cod" name="paymentMethod" type="radio" class="form-check-input" value="cod" checked required>
                      <label class="form-check-label" for="cod" value="cod">Cash On Delivery</label>
                    </div>
                    <div class="form-check">
                      <input id="paytm" name="paymentMethod" type="radio" class="form-check-input" value="paytm" required>
                      <label class="form-check-label" for="paytm" value="paytm">Paytm</label>
                    </div>
                  </div>
        
                  
        
                  <hr class="my-4">
        
                  <button class="w-100 btn btn-lg bg-success text-white" type="submit">Continue to checkout</button>
                </form>
              </div>
            </div>
          </main>
    </div>

    <%- include('footer') -%>
    <%- include('bootstrapLink') -%>
</body>

</html>