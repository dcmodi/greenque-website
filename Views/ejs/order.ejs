<!DOCTYPE html>
<html>
    <head>
        <title>Order</title>
    </head>
    <body>
        
        <% if(Object.keys(user).length == 0){ %>
            <a href="/login">Login</a> to Continue
        <% } %>
        <% if(Object.keys(order).length != 0){ %>
            <table border=1>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
                <% order.forEach(o=>{ %>
                    <% o.products.forEach(p=>{ %>
                        <tr>
                            
                            <td><%= o._id %></td>
                            <td><%= o.order_date %></td>
                            <td><%= p.name %></td>
                            <td><%= p.price %></td>
                            <td><%= p.qty %></td>
                            <td><%= o.total %></td>
                        </tr>
                    <% }) %>
                <% }) %>
                
            </table>
        <%}%>
    </body>
</html>