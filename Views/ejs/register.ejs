<!doctype html>
<html>

<head>
    <title>Register</title>
    <%- include('bootstrap') -%>
</head>

<body>
    <%- include('header',{ u :{}}); -%>

        <!-- Registration -->
        <div class="container-fluid" id="register">
            <form action="#" method="POST" autocomplete="off">
                <div class="row">
                    <div class="col-12">
                        <center>
                            <h3>Register</h3>
                        </center>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <form action="/register" method="post" autocomplete="off">
                            <% if(messages.err){ %> 
                                <div class="text-danger"><%= messages.err %></div>
                            <% } %>
                        </center>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="text" name="name" id="" placeholder="Enter Name">
                            <% if(messages.name){ %> 
                                <div class="text-danger"><%= messages.name %></div>
                            <% } %>
                        </center>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="text" name="email" id="" placeholder="Enter Email ID">
                            <% if(messages.email){ %> 
                                <div class="text-danger"><%= messages.email %></div>
                            <% } %>
                        </center>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="text" name="mobile" id="" placeholder="Enter Phone No">
                            <% if(messages.num){ %> 
                                <div class="text-danger"><%= messages.num %></div>
                            <% } %>
                        </center>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="password" name="password" id="" placeholder="Enter New Password">
                            <% if(messages.pwd){ %> 
                                <div class="text-danger"><%= messages.pwd %></div>
                            <% } %>
                        </center>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="password" name="pwd" id="" placeholder="Re-type Password">
                            <% if(messages.matchpwd){ %> 
                                <div class="text-danger"><%= messages.matchpwd %></div>
                            <% } %>
                        </center>
                    </div>
                </div>
                <center class="mt-3">
                    <button class="btn bg-success text-white" type="submit">Register</button>
                </center>

            </form>
        </div>
        <!-- End Registration -->

        <%- include('footer'); -%>
            <%- include('bootstrapLink'); -%>
</body>

</html>