<!DOCTYPE html>
<html>

<head>
    <title>Forgot Password</title>
    <%- include('bootstrap') -%>
</head>

<body>
    <!-- LOADER-->
    <div class="spin" id="spinner"></div>
    <div class="spin" id="spinner2"></div>

    <!-- END LOADER-->
    
    <!-- Header -->
    <nav class="navbar navbar-expand-md navbar-dark bg-light" id="header">
        <div class="container-fluid">
            <a href="#" class="navbar-brand text-success">
                <img src="./img/greenque.png" width="38" height="38" class="d-inline-block " alt="">
                <span class="navbar-brand text-success">Greenque</span>
            </a>
        </div>
    </nav>
    <!--End Header -->

    <div class="container-fluid" id="forgot-password">
        <form action="/mail" method="POST" autocomplete="off"> 
            <div class="row">
                <div class="col-12">
                    <center>
                        <p class="text-danger">NOTE:- Link will be sent to your registered Email and Link will be valid for 10 min.</p>
                    </center>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-12">
                    <center>
                        <input type="email" name="email">
                    </center>
                </div>
            </div>
            <% if(messages.err){ %>
                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                           <p class="text-danger"><%= messages.err %></p>
                        </center>
                    </div>
                </div>
            <% } %>
            
            <center class="mt-3">
                <button class="btn bg-success text-white" type="submit">Submit</button>
            </center>
        </form>
    </div>
    <%- include('bootstrapLink') -%>
</body>

</html>
