<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <%- include('bootstrap') -%>
</head>

<body>
    <%- include('header'); -%>
        <!-- LOGIN -->
        <div class="container-fluid" id="login">
            <form action="/login" method="POST" autocomplete="off">
                <div class="row">
                    <div class="col-12">
                        <center>
                            <h3>Sign in</h3>
                        </center>
                    </div>
                </div>
                <% if(messages.err){ %>
                    <div class="row mt-3">
                        <div class="col-12">
                            <center>
                               <p class="text-danger"><%= messages.err %></p>
                            </center>
                        </div>
                    </div>
                <% } %>
                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <% if (messages.error){ %>

                                <p class="text-danger">
                                    <%= messages.error %>
                                </p>

                                <% } %>
                        </center>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="text" name="email" placeholder="Enter Email-ID">
                        </center>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <center>
                            <input type="password" name="password" placeholder="Enter Password">
                        </center>
                    </div>
                </div>
                <center class="mt-3">
                    <button class="btn bg-success text-white" type="submit">Sign in</button>
                </center>
                <center class="mt-3">
                    Don't have an account<a href="/register"> click here</a>
                </center>
                <center class="mt-1">
                    Forgot Password<a href="/mail"> click here</a>
                </center>
            </form>
        </div>
        <!-- END LOGIN -->
        <%- include('footer'); -%>
        <%- include('bootstrapLink'); -%>
</body>

</html>